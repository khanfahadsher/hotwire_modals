
<div class="md:grid md:grid-cols-3 md:gap-6">
<div class="md:col-span-1">
  <div class="px-4 sm:px-0">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Employment</h3>
    <p class="mt-1 text-sm text-gray-600">Tell about joining and ending date.</p>
  </div>
</div>
<div class="mt-5 md:col-span-2 md:mt-0" data-controller='personal'>
  <%= form_with(model: employment, class: "emplloyment_contents", 
    html: { data: { controller: "turbo_modal", action: 'turbo-modal#employment_validate' } }) do |f| %>
    <div class="overflow-hidden shadow sm:rounded-md">
      <div class="bg-white px-4 py-5 sm:p-6">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6 sm:col-span-3">
            <label for="employer" class="block text-sm font-medium text-gray-700">Employer</label>
            <%= f.text_field :employer, type:"text", name:"employment[employer]", id:"employer", autocomplete:"given-name", class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <span id="employment_error"> </span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label for="date-started" class="block text-sm font-medium text-gray-700">Date Started</label>
            <%= f.text_field :date_started, "data-provide" => 'datepicker', name:"employment[date_started]", id:"date-started", autocomplete:"given-name", class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <span id="date_started_error"> </span>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <label for="date-employment-ended" class="block text-sm font-medium text-gray-700">Date Employment Ended</label>
            <%= f.text_field :date_employment_ended, type:"text", name:"employment[date_employment_ended]", id:"date-employment-ended", autocomplete:"given-name", class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            <span id="date_ended_error"> </span>
          </div>

      </div>
      <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
        <%= f.submit "Save Employment", class:"inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>

      <div class="bg-gray-50 px-4 py-3 text-left sm:px-6">
        <%= button_tag "Cancel", data: { action: "turbo-modal#hideModal" }, type: "button", class: "inline-flex justify-center rounded-md border border-transparent bg-red-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-offset-2"%>
      </div>
    </div>
  <% end %>
</div>
</div>
</div>

<div class="hidden sm:block" aria-hidden="true">
<div class="py-5">
<div class="border-t border-gray-200"></div>
</div>
</div>
