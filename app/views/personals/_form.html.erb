<div class="md:grid md:grid-cols-3 md:gap-6">
  <div class="md:col-span-1">
    <div class="px-4 sm:px-0">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Personal</h3>
      <p class="mt-1 text-sm text-gray-600">Use a permanent address where you can receive mail.</p>
    </div>
  </div>
  <div class="mt-5 md:col-span-2 md:mt-0" data-controller='personal'>
    <%= form_with(model: personal, class: "personal_contents",
      html: { data: { controller: "turbo_modal", action: 'turbo-modal#personal_validate' } }) do |f| %>
      <% if @personal.errors.any? %>
        <ul>
          <% @personal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div class="overflow-hidden shadow sm:rounded-md">
        <div class="bg-white px-4 py-5 sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
              <label for="first-name" class="block text-sm font-medium text-gray-700">First name</label>
              <%= f.text_field :first_name, type:"text", name:"personal[first_name]", id:"first-name", autocomplete:"given-name", class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              <span id="first_name_error"> </span>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="last-name" class="block text-sm font-medium text-gray-700">Last name</label>
              <%= f.text_field :last_name, type:"text", name:"personal[last_name]", id:"last-name", autocomplete:"given-name", class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              <span id="last_name_error"> </span>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="nick-name" class="block text-sm font-medium text-gray-700">Nick name</label>
              <%= f.text_field :nick_name, type:"text", name:"personal[nick_name]", id:"nick-name", autocomplete:"given-name", class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <div class="col-span-6 sm:col-span-4">
              <label for="email-address" class="block text-sm font-medium text-gray-700">Email address</label>
              <%= f.text_field :email_address, type:"text", name:"personal[email_address]", id:"email-address", autocomplete:"email-address", class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              <span id="email_error"> </span>
            </div>

            <div class="col-span-6 sm:col-span-4">
              <label for="phone-number" class="block text-sm font-medium text-gray-700">Phone Number</label>
              <%= f.text_field :phone_number, type:"tel", name:"personal[phone_number]", id:"phone-number", autocomplete:"phone-number", class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",  placeholder:'xxx-xxx-xxxx' %>
              <span id="phone_error"> </span>
            </div>

        </div>
        <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
          <%= f.submit "Save Personal", class:"inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        </div>
        <div class="bg-gray-50 px-4 py-3 text-left sm:px-6">
          <%= button_tag "Cancel", data: { action: "turbo-modal#hideModal" }, type: "button", class: "inline-flex justify-center rounded-md border border-transparent bg-red-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-offset-2"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>

<div class="hidden sm:block" aria-hidden="true">
<div class="py-5">
  <div class="border-t border-gray-200"></div>
</div>
</div>
